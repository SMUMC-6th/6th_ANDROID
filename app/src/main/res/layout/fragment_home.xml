    <TextView
        android:id="@+id/home_main_flo_company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(주)드림어스컴퍼니 사업자 정보"
        android:textColor="@color/gray_color"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_facebook_icon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/home_main_flo_company_arrow_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/btn_main_arrow_more"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_facebook_icon_iv"
        app:layout_constraintStart_toEndOf="@id/home_main_flo_company_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
