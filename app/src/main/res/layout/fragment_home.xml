        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_video2_iv"
        app:layout_constraintStart_toEndOf="@id/home_main_video1_iv"
        app:layout_constraintBottom_toTopOf="@id/home_main_video2_singer_tv"
        />

    <TextView
        android:id="@+id/home_main_video2_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textColor="@color/gray_color"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_video2_title_tv"
        app:layout_constraintStart_toEndOf="@id/home_main_video1_iv"
        />
    
    <ImageView
        android:id="@+id/home_main_banner_iv"
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:src="@drawable/discovery_banner_aos"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_video1_singer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <ImageView
        android:id="@+id/home_main_viewpage2_iv"
        android:layout_width="370dp"
        android:layout_height="140dp"
        android:src="@drawable/img_home_viewpager_exp2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_banner_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ImageView
        android:id="@+id/home_main_facebook_icon_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_main_facebook"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_viewpage2_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_main_instagram_icon_iv"/>

    <ImageView
        android:id="@+id/home_main_instagram_icon_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_main_instagram"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_viewpage2_iv"
        app:layout_constraintStart_toEndOf="@id/home_main_facebook_icon_iv"
        app:layout_constraintEnd_toStartOf="@id/home_main_youtube_icon_iv"/>

    <ImageView
        android:id="@+id/home_main_youtube_icon_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_main_youtube"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_viewpage2_iv"
        app:layout_constraintStart_toEndOf="@id/home_main_instagram_icon_iv"
        app:layout_constraintEnd_toStartOf="@id/home_main_twitter_icon_iv"/>

    <ImageView
        android:id="@+id/home_main_twitter_icon_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_main_twitter"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_viewpage2_iv"
